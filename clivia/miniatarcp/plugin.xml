<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.scdeco.miniatarcp.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="RCP Perspective"
            class="com.scdeco.miniatarcp.Perspective"
            id="RCPWorkbenchTutorial.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="com.scdeco.miniatarcp.cmd.AboutCommand"
            id="com.scdeco.miniatarcp.cmd.about"
            name="About">
      </command>
      <command
            defaultHandler="com.scdeco.miniatarcp.cmd.UserCommand"
            id="com.scdeco.miniatarcp.cmd.user"
            name="Call UserEditor">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File"
               tooltip="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit"
                  style="push">
            </command>
            <command
                  commandId="com.scdeco.miniatarcp.cmd.user"
                  icon="icons/note.ico"
                  label="Open UserEditor"
                  style="push"
                  tooltip="UserEditor">
            </command>
         </menu>
         <menu
               label="Help"
               tooltip="Help">
            <command
                  commandId="com.scdeco.miniatarcp.cmd.about"
                  label="About"
                  style="push"
                  tooltip="About">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="toolbar1">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  icon="icons/alt_window16.gif"
                  label="Exit"
                  style="push"
                  tooltip="Exit">
            </command>
            <command
                  commandId="com.scdeco.miniatarcp.cmd.about"
                  icon="icons/alt_about.gif"
                  label="Abour"
                  style="push"
                  tooltip="About">
            </command>
         </toolbar>
         <toolbar
               id="toolbar0">
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="com.scdeco.miniatarcp.view.ContactView"
            icon="src/main/resources/icons/userbook.ico"
            id="com.scdeco.miniatarcp.view.contact"
            name="Contact"
            restorable="true">
      </view>
      <view
            class="com.scdeco.miniatarcp.view.CategoryView"
            icon="src/main/resources/icons/box.ico"
            id="com.scdeco.miniatarcp.view.category"
            name="Category"
            restorable="true">
      </view>
      <view
            class="com.scdeco.miniatarcp.view.HistoryView"
            icon="src/main/resources/icons/07223.ico"
            id="com.scdeco.miniatarcp.view.history"
            name="History"
            restorable="true">
      </view>
      <view
            class="com.scdeco.miniatarcp.view.TaskView"
            icon="src/main/resources/icons/clock4.ico"
            id="com.scdeco.miniatarcp.view.task"
            name="Task"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               closeable="true"
               id="com.scdeco.miniatarcp.view.task"
               minimized="false"
               moveable="true"
               relationship="right"
               relative="org.eclipse.ui.editorss"
               showTitle="true"
               visible="true">
         </view>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="RCPWorkbenchTutorial.perspective">
         <view
               closeable="true"
               id="com.scdeco.miniatarcp.view.contact"
               minimized="false"
               moveable="true"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               visible="true">
         </view>
         <view
               closeable="true"
               id="com.scdeco.miniatarcp.view.category"
               minimized="false"
               moveable="true"
               relationship="stack"
               relative="com.scdeco.miniatarcp.view.contact"
               showTitle="true"
               visible="true">
         </view>
         <view
               closeable="true"
               id="com.scdeco.miniatarcp.view.history"
               minimized="false"
               moveable="true"
               relationship="bottom"
               relative="com.scdeco.miniatarcp.view.contact"
               showTitle="true"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="com.scdeco.miniatarcp.editor.UserEditor"
            default="false"
            icon="icons/usercard.ico"
            id="com.scdeco.miniatarcp.editor.user"
            name="UserEditor">
      </editor>
   </extension>

</plugin>
